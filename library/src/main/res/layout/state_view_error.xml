<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/status_view_cry" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/status_view_space"
        android:text="@string/status_view_error_tip"
        android:textSize="@dimen/status_view_error_tip" />

    <TextView
        android:id="@id/reload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/status_view_reload"
        android:layout_marginTop="@dimen/status_view_space"
        android:textColor="@color/status_view_reload"
        android:textSize="@dimen/status_view_reload" />
</LinearLayout>